{
  "manifest_version": 3,
  "name": "Admin Message Extension",
  "version": "1.0.0",
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "32": "assets/icons/icon.png"
    }
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "permissions": [
    "scripting",
    "storage"  
  ],
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ]
}